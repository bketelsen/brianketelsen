/* bk.css   */

body {
	background-color: #f1f1f1;
	text-align: center;
	font-family: "Courier New", Courier, monospace;
	font-size: 20pt;
	color: #717171;
	padding: 0px 30px 0px 30px;
	overflow: auto;
	line-height: 1.0;
	letter-spacing: 1.0;
}
/* fixed border around viewport */
#top, #bottom, #left, #right {
	background: #e3e3e3;
	position: fixed;
}
#left, #right {
	top: 0; bottom: 0;
	width: 15px;
}
#left { left: 0; }
#right { right: 0; }

#top, #bottom {
	left: 0; right: 0;
	height: 15px;
}
#top { top: 0; }
#bottom { bottom: 0; }	
/*  block of brian ketelesen in center, followed by vertical texts */
#brian {
	text-align: center;
	width: 290px;
	height: 25px;
	margin-left: auto;
	margin-right: auto;
}
#upper, #lower {
	text-align: left;
	width: 290px;
	height: 8.1em;
	margin-left: auto;
	margin-right: auto;
}
#lower {
	xmargin-top: 10px;
	height: 4em;
}
.letter {
	float: left;
	height: 20px;
}
.code {
	text-decoration: underline;
}
.code:hover {
	color: #7f2643;
}
.vertical {
	float: left;
	width: 16px;
	color: #7f2643;
  }
.vertical em {
	display:block; 
	text-align:center;
	font-style: normal;
  }
/*  real content for the page  */
.desc {
	font-size: 12pt;
	text-align: left;
	clear: left;
}
.desc b {
	color: #7f2643;
}
/*  indents needed to line the vertical texts with the letter in brian  */
#uruby, #lruby {
	margin-left: 16px;
}
#uproto, #lproto {
	margin-left: 32px;
}
#uflorida, #lflorida {
	margin-left: 48px;
}
#uspike, #lspike {
	margin-left: 96px;
}
#udeploy, #ldeploy {
	margin-left: 112px;
}
#ustartup, #lstartup {
	margin-left: 128px;
}
#uteam, #lteam {
	margin-left: 240px;
}
#ucontact, #lcontact {
	margin-left: 272px;
}